background yes
font Droid Sans:size=9
xftfont Droid Sans:size=10
use_xft yes
xftalpha 0.1
update_interval 1.0
total_run_times 0
own_window yes
own_window_type override
own_window_transparent no
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders yes
minimum_size 220 5
maximum_width 220
default_color d7d7d7
default_shade_color black
default_outline_color 000000
alignment top_right
gap_x 15
gap_y 30
no_buffers yes
cpu_avg_samples 2
override_utf8_locale no
uppercase no # set to yes if you want all text to be in uppercase
use_spacer yes
imlib_cache_size 0
own_window_argb_visual yes
own_window_argb_value 100

TEXT

${font Droid Sans:size=15}${alignc}${time %A %B %d, %Y}
${offset 45}${font Droid Sans:size=30}${alignc}${time %I:%M}${font}${voffset -15}${font Droid Sans Mono:size=20}:${time %S}
${hr 1 }${font}
#SYSTEM ${hr 1 }
Hostname: $alignr$nodename
Kernel: $alignr$kernel
Uptime: $alignr$uptime
#Processes: ${alignr}$processes ($running_processes running)
Local Ip: $alignr ${addr wlp4s0}
${hr 1 }
CPU TOTAL ${alignr}${cpu cpu0}%
${cpugraph}
CPU 1 ${alignr}${cpu cpu1}%
${cpugraph cpu1}
CPU 2 ${alignr}${cpu cpu2}%
${cpugraph cpu2}
CPU 3 ${alignr}${cpu cpu3}%
${cpugraph cpu3}
CPU 4 ${alignr}${cpu cpu4}%
${cpugraph cpu4}
${hr 1 }

RAM ${alignr}$mem / $memmax ($memperc%)
${membar 4}
SWAP ${alignr}$swap / $swapmax ($swapperc%)
${swapbar 4}

STATUS ${hr 1 }
Ressources $alignr CPU% MEM%
${top name 1}$alignr${top cpu 1}       ${top mem 1}
${top name 2}$alignr${top cpu 2}       ${top mem 2}
${top name 3}$alignr${top cpu 3}       ${top mem 3}
${top name 4}$alignr${top cpu 4}       ${top mem 4}
${top name 5}$alignr${top cpu 5}       ${top mem 5}
${top name 6}$alignr${top cpu 6}       ${top mem 6}

FILESYSTEM ${hr 1}${color}
Root: ${alignr}${fs_free /} / ${fs_size /}
${fs_bar 4 /}
Home: ${alignr}${fs_free /home} / ${fs_size /home}
${fs_bar 4 /}

NETWORK ${hr 1}${color}
Link Quality ${alignr}${wireless_link_qual wlp4s0}/${wireless_link_qual_max wlp4s0}

Down Speed ${alignr}${downspeed wlp4s0} k/s
Total ${alignr}${totaldown wlp4s0}
${downspeedgraph wlp4s0}
Up Speed ${alignr}${upspeed wlp4s0} k/s
Total ${alignr}${totalup wlp4s0}
${upspeedgraph wlp4s0}

