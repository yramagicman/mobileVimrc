#!/bin/python2
import pynotify
import commands
import time
packages = commands.getstatusoutput('yaourt -Qu')
configpath = '/home/jonathan/.config/updates/'
if len(packages[1]) > 0:
    retVal = packages[0]
    packages = packages[1]
    packagecount = len(packages[1])
    if retVal == 0 and packagecount > 0:
        updates = open(configpath + time.strftime("%m%d%Y")+'.txt','w+')
        updates.write(packages)
