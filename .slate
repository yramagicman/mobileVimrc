# This is the default .slate file.
# If no ~/.slate file exists this is the file that will be used.

config defaultToCurrentScreen true
config nudgePercentOf screenSize
#config windowHintsOrder
config windowHintsIgnoreHiddenWindows false
#config windowHintsShowIcons true
config windowHintsSpread true
config resizePercentOf screenSize

# Resize Bindings
bind space:alt  move screenOriginX;screenOriginY screenSizeX;screenSizeY
#bind right:alt       resize +5% +0
#bind left:alt        resize -5% +0
#bind up:alt          resize +0   -5%
#bind down:alt        resize +0   +5%
#bind right:ctrl;cmd  resize -5% +0 bottom-right
#bind left:ctrl;cmd   resize +5% +0 bottom-right
#bind up:ctrl;cmd     resize +0   +5% bottom-right
#bind down:ctrl;cmd   resize +0   -5% bottom-right
#quarters
#bottom right
bind down:shift;ctrl  move screenOriginX+screenSizeX/2;screenOriginY+screenSizeY/2 screenSizeX/2;screenSizeY/2
#top left
bind up:shift;ctrl  move screenOriginX;screenOriginY screenSizeX/2;screenSizeY/2
#top right
bind right:shift;ctrl  move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY/2
#bottom left
bind left:shift;ctrl  move screenOriginX;screenOriginY+screenSizeY/2 screenSizeX/2;screenSizeY/2
bind c:alt;ctrl  move screenOriginX+screenSizeX*0.1;screenOriginY screenSizeX*0.8;screenSizeY

# Push Bindings
bind right:ctrl;alt  push right bar-resize:screenSizeX/2
bind left:ctrl;alt   push left  bar-resize:screenSizeX/2
bind up:ctrl;alt     push up    bar-resize:screenSizeY/2
bind down:ctrl;alt   push down  bar-resize:screenSizeY/2

bind right:ctrl;alt;shift  push right bar-resize:screenSizeX*.38
bind left:ctrl;alt;shift  push left  bar-resize:screenSizeX*0.38
bind right:cmd;alt;shift  push right bar-resize:screenSizeX*.62
bind left:cmd;alt;shift  push left  bar-resize:screenSizeX*0.62
bind up:ctrl;alt;shift  push up    bar-resize:screenSizeY/3
bind down:ctrl;alt;shift   push down  bar-resize:screenSizeY/3
# Nudge Bindings
bind right:shift;alt nudge +5% +0
bind left:shift;alt  nudge -5% +0
bind up:shift;alt    nudge +0   -5%
bind down:shift;alt  nudge +0   +5%

# Throw Bindings
#bind 1:ctrl;alt         throw 0 resize
#bind 2:ctrl;alt         throw 1 resize
#bind 3:ctrl;alt         throw 2 resize
bind l:ctrl;alt;cmd   throw right resize
bind h:ctrl;alt;cmd   throw left  resize
bind k:ctrl;alt;cmd   throw up    resize
bind j:ctrl;alt;cmd   throw down  resize

# Focus Bindings
#bind right:cmd    focus right
#bind left:cmd     focus left
#bind up:cmd       focus up
#bind down:cmd     focus down
#bind up:cmd;alt   focus behind
#bind down:cmd;alt focus behind

# Window Hints
bind tab:alt hint

bind i:cmd;alt;ctrl focus 'iTerm'
bind t:cmd;alt;ctrl focus 'iTunes'
bind c:cmd;alt;ctrl focus 'Clementine'
bind b:cmd;alt;ctrl focus 'FirefoxDeveloperEdition'
bind f:cmd;alt;ctrl focus 'Finder'
bind v:cmd;alt;ctrl focus 'MacVim'
bind s:cmd;alt;ctrl focus 'Skype'
bind m:cmd;alt;ctrl focus 'Mail'